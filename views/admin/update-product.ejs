<form method="post" action="/products/<%= product.id %>/update" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Enter product name"
                value="<%- product.name %>" required>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" class="form-control" name="price" id="price" placeholder="Enter product price"
                value="<%= product.price %>" step="any" required>
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" name="category" id="category" required>
                <option value="">Choose the product category</option>
                <% for (const category of PRODUCT_CATEGORIES) { %>
                    <option value="<%= category %>" <% if (category===product.category) { %> selected <% } %> >
                            <%= category %>
                    </option>
                    <% } %>
            </select>
        </div>
        <div class="mb-3">
            <label for="sizes" class="form-label">Sizes</label>
            <% for (const [value, size] of Object.entries(PRODUCT_SIZES)) { %>
                <div class="form-check text-black">
                    <input class="form-check-input" type="checkbox" value="<%= value %>" id="<%= value %>" name="sizes"
                        <% if (product.sizes.includes(value)) { %> checked <% } %>>
                        <label class="form-check-label" for="<%= value %>">
                            <%= size %>
                        </label>
                </div>
                <% } %>
        </div>
        <div class="mb-3">
            <label for="shortDescription" class="form-label">Short Description</label>
            <input type="text" class="form-control" name="shortDescription" id="shortDescription"
                placeholder="Enter short description" value="<%- product.shortDescription %>" required>
        </div>
        <div class="mb-3">
            <label for="longDescription" class="form-label">Long Description</label>
            <textarea class="form-control" name="longDescription" id="longDescription" rows="3"
                placeholder="Enter long description"><%- product.longDescription %></textarea>
        </div>
        <div class="mb-3">
            <label for="availability" class="form-label">Available?</label>
            <select class="form-select" aria-label="Product availability select input" name="available">
                <%= product.available %>
                    <option value="1" <% if (product.available) { %> selected <% } %>>Yes</option>
                    <option value="0" <% if (!product.available) { %> selected <% } %>>No</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="productImageInput" class="form-label"> Update product image</label>
            <input class="form-control" type="file" name="image" id="productImageInput">
            <label class="form-label small font-italic text-muted">JPG or PNG no larger than 5
                MB</label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save
            changes</button>
    </div>
</form>